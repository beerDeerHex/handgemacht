---
import "../styles/global.css";
---

<!-- Desktop navbar -->
<nav
  class="bg-white shadow w-full xl:h-25 h-17 sticky top-0 z-50 hidden lg:flex"
>
  <div class="w-full px-10 h-full items-center justify-between hidden lg:flex">
    <div class="flex-1">
      <a class="text-5xl font-indie flex justify-self-start" href="/index.html">
        handgemacht ♥
      </a>
    </div>
    <div class="flex-1">
      <div class="flex justify-end gap-7">
        {
          [
            {
              href: "/products/all",
              label: "Alle Produkte",
              paths: [
                "/products/all/",
                "/products/bags/",
                "/products/backpacks/",
                "/products/buttons/",
                "/products/blankets/",
                "/products/misc/",
              ],
            },
            { href: "/about", label: "Über mich", paths: ["/about/"] },
            { href: "/contact", label: "Kontakt", paths: ["/contact/"] },
            { href: "/events", label: "Veranstaltungen", paths: ["/events/"] },
          ].map(({ href, label, paths }) => (
            <a
              class={`text-xl md:text-xl xl:text-2xl 2xl:text-3xl font-pompiere 
              tracking-wider hover:border-b-1 hover:border-gray-300
              ${paths.includes(Astro.url.pathname) ? "border-gray-700 border-b-1" : ""}`}
              href={href}
            >
              {label}
            </a>
          ))
        }
        <div class="justify-self-end flex justify-end">
          <a
            href="https://www.facebook.com/HandgemachtClaudiaWild"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Facebook"
            class="text-gray-500 hover:text-blue-600 transition-colors"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="28"
              height="28"
              fill="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                d="M22.675 0h-21.35C.595 0 0 .592 0 1.326v21.348C0 23.408.595 24 1.325 24h11.495v-9.294H9.692v-3.622h3.128V8.413c0-3.1 1.893-4.788 4.659-4.788 1.325 0 2.463.099 2.797.143v3.24l-1.918.001c-1.504 0-1.797.715-1.797 1.763v2.313h3.587l-.467 3.622h-3.12V24h6.116C23.406 24 24 23.408 24 22.674V1.326C24 .592 23.406 0 22.675 0"
              ></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</nav>

<!-- Mobile navbar -->
<nav
  class="bg-white border-gray-200 py-2.5 w-full lg:hidden shadow sticky z-50"
>
  <div
    class="flex flex-wrap items-center justify-between max-w-screen-xl pe-2 ps-5 mx-auto"
  >
    <a href="/index.html" class="flex items-center">
      <span
        class="self-center text-3xl font-indie whitespace-nowrap text-gray-900"
        >handgemacht ♥</span
      >
    </a>
    <div class="flex items-center">
      <button
        id="mobile-menu-toggle"
        type="button"
        class="inline-flex items-center p-2 ml-1 text-sm text-gray-500 rounded-lg lg:hidden"
        aria-controls="mobile-menu"
        aria-expanded="false"
        onclick="
          document.getElementById('mobile-menu').classList.toggle('hidden');
          document.getElementById('menu-icon').classList.toggle('hidden');
          document.getElementById('close-icon').classList.toggle('hidden');
        "
      >
        <!-- Hamburger icon -->
        <svg
          id="menu-icon"
          class="w-6 h-6"
          fill="currentColor"
          viewBox="0 0 20 20"
        >
          <path
            fill-rule="evenodd"
            d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z"
            clip-rule="evenodd"></path>
        </svg>
        <!-- X icon -->
        <svg
          id="close-icon"
          class="w-6 h-6 hidden"
          fill="currentColor"
          viewBox="0 0 20 20"
        >
          <path
            fill-rule="evenodd"
            d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
            clip-rule="evenodd"></path>
        </svg>
      </button>
    </div>
    <div class="items-center justify-between w-full hidden" id="mobile-menu">
      <ul class="flex flex-col mt-4 font-medium me-6">
        {
          [
            {
              href: "/products/all",
              label: "Alle Produkte",
              paths: [
                "/products/all/",
                "/products/bags/",
                "/products/backpacks/",
                "/products/buttons/",
                "/products/blankets/",
                "/products/misc/",
              ],
            },
            { href: "/about", label: "Über mich", paths: ["/about/"] },
            { href: "/contact", label: "Kontakt", paths: ["/contact/"] },
            { href: "/events", label: "Veranstaltungen", paths: ["/events/"] },
          ].map(({ href, label, paths }) => (
            <li>
              <a
                class={`block py-2 pl-3 pr-4 text-xl font-pompiere  border-b border-gray-100 hover:bg-gray-50
                ${paths.includes(Astro.url.pathname) ? "text-blue-300 font-bold" : "text-gray-700"}`}
                href={href}
              >
                {label}
              </a>
            </li>
          ))
        }
        <li>
          <a
            href="https://www.facebook.com/HandgemachtClaudiaWild"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Facebook"
            class="flex items-center gap-2 py-2 pl-3 pr-4 text-gray-500 hover:text-blue-600"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="28"
              height="28"
              fill="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                d="M22.675 0h-21.35C.595 0 0 .592 0 1.326v21.348C0 23.408.595 24 1.325 24h11.495v-9.294H9.692v-3.622h3.128V8.413c0-3.1 1.893-4.788 4.659-4.788 1.325 0 2.463.099 2.797.143v3.24l-1.918.001c-1.504 0-1.797.715-1.797 1.763v2.313h3.587l-.467 3.622h-3.12V24h6.116C23.406 24 24 23.408 24 22.674V1.326C24 .592 23.406 0 22.675 0"
              ></path>
            </svg>
          </a>
        </li>
      </ul>
    </div>
  </div>
</nav>
