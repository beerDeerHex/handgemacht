---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Image from "astro/components/Image.astro";

import WKOLogo from "../images/Rechtliches/ecg.jpg";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>handgemacht</title>
    <title>Astro</title>
  </head>
  <body>
    <Header />
    <main class="w-full h-fit">
      <slot />
    </main>
    <footer
      class="bg-white py-6 px-4 border-t border-gray-200 text-sm text-slate-700"
    >
      <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- Column 1 -->
        <div>
          <h3 class="font-semibold mb-1 text-base text-slate-900">
            Handgemacht
          </h3>
          <ul class="space-y-0.5">
            <li><a href="/about" class="hover:underline">Über mich</a></li>
            <li><a href="/contact" class="hover:underline">Kontakt</a></li>
            <li><a href="/events" class="hover:underline">Veranstaltungen</a></li>
          </ul>
        </div>

        <!-- Column 2 -->
        <div>
          <h3 class="font-semibold mb-1 text-base text-slate-900">Produkte</h3>
          <ul class="grid grid-cols-2 gap-y-1 gap-x-4">
            <li><a href="/all" class="hover:underline">Alle Produkte</a></li>
            <li><a href="/blankets" class="hover:underline">Decken</a></li>
            <li><a href="/backpacks" class="hover:underline">Rucksäcke</a></li>
            <li><a href="/bags" class="hover:underline">Taschen</a></li>
            <li><a href="/buttons" class="hover:underline">Zwirnknöpfe</a></li>
            <li><a href="/misc" class="hover:underline">Verschiedenes</a></li>
          </ul>
        </div>

        <!-- Column 3 (optional: branding or logo in future) -->
        <div class="md:text-right text-center md:self-end">
          <a 
            href="https://www.wkoecg.at/Ecg.aspx?FirmaID=8b9c6511-c266-4548-b07e-5de182a4f6bb"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-block mb-2"
          >
            <Image
              src={WKOLogo}
              alt="WKÖ Mitglied"
              class="h-8 w-auto mx-auto md:ml-auto md:mr-0"
            />
          </a>
          <p class="mt-2 md:mt-0">&copy; Claudia Wild 2025</p>
        </div>
      </div>
    </footer>
  </body>
</html>
